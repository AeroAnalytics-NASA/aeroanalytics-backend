generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email         String   @unique @db.Citext
  isSubscribed  Boolean  @default(false) @map("is_subscribed")
  latitude1     Float    @db.DoublePrecision
  longitude1    Float    @db.DoublePrecision
  latitude2     Float?   @db.DoublePrecision
  longitude2    Float?   @db.DoublePrecision
  loc1          Unsupported("geography")
  loc2          Unsupported("geography")?
  createdAt     DateTime @default(now()) @db.Timestamptz(6) @map("created_at")
  updatedAt     DateTime @default(now()) @db.Timestamptz(6) @map("updated_at")

  @@map("user")
}